<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>The SounLDibrary</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    
    <link rel="stylesheet" href="./css/index.css"> <!-- página de inicio, login, signin -->
    
    <style>
        .col-sm-6{display:none;}
        .row{display:none;}        
    </style>
    
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    
    <script>    
    
// FadeIN:
    $( document ).ready(function() {
      $( ".row" ).fadeIn(1000, function(){
        $( ".col-sm-6" ).fadeIn(1500);
      });      
    });

    </script>

</head>
<body>

<div class="container-fluid white rounded">
    <div id="fila" class="row transparent">
        <div class="col-sm-6 offset-md-3 p-x-25">
            <h1><span class="fa fa-sign-in"></span> Iniciar sesión</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Correo electrónico</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Iniciar sesión</button>
            </form>

            <hr>
			<div  class="opciones">
            <p>Necesitas una cuenta? <a href="/signup"><big>¡Regístrate!</big></a></p>
            <p><a href="/"><big>Volver</big></a></p>
			</div>

        </div>
    </div>
</div>

</body>
</html>